<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#58B2F9">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:backgroundTint="#AAA"
                    android:text="Home"
                    android:textColor="#000" />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:backgroundTint="#AAA"
                    android:text="Produit"
                    android:textColor="#000" />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:backgroundTint="#AAA"
                    android:text="Contact"
                    android:textColor="#000" />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:backgroundTint="#AAA"
                    android:text="About"
                    android:textColor="#000" />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:backgroundTint="#AAA"
                    android:text="Admin"
                    android:textColor="#000" />
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6D87F6"
            android:gravity="center"
            android:text="Mon Super Titre"
            android:textColor="#fff"
            android:textSize="30sp" />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <!--//chien 1-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="95"
                        android:scaleType="fitXY"
                        android:src="@drawable/chien1" />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:background="#FEAABA"
                        android:gravity="center"
                        android:text="Chien 1"
                        android:textColor="#fff"
                        android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="95"
                        android:scaleType="fitXY"
                        android:src="@drawable/chien2" />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:background="#FEAABA"
                        android:gravity="center"
                        android:text="Chien 1"
                        android:textColor="#fff"
                        android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="95"
                        android:scaleType="fitXY"
                        android:src="@drawable/chien3" />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:background="#FEAABA"
                        android:gravity="center"
                        android:text="Chien 1"
                        android:textColor="#fff"
                        android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>